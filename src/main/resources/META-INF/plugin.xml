<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.arnold.signature</id>
    <name>APP_SIGNATURE</name>
    <vendor>arnold</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.arnold.signature.toolWindow.MyToolWindowFactory" id="MyToolWindow"/>
    </extensions>
    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <!-- displayType只有这四种类型, id 在一个插件内不能重复,isLogByDefault表示是否在 Event Log 中记录 -->
        <notificationGroup displayType="BALLOON" id="arnold.notification.balloon" key="notification.group.name"/>
    </extensions>


    <applicationListeners>
        <listener class="com.arnold.signature.listeners.MyFrameStateListener"
                  topic="com.intellij.ide.FrameStateListener"/>
    </applicationListeners>
    <actions>
        <action id="signature.rightClick" class="com.arnold.signature.RightClickAction" text="签名"
                description="右键签名">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="RefactoringMenu"/>
        </action>


        <group id="signatureMenu" text="signature" popup="true">
            <add-to-group group-id="EditMenu" anchor="first"/>
            <action id="signature.editConfigClick" class="com.arnold.signature.EditConfigAction" text="编辑签名" description="编辑签名参数"/>
            <action id="signature.selectApkSignatureAction" class="com.arnold.signature.SelectApkSignatureAction" text="签名APK" description="选择apk进行签名"/>
        </group>

        <!--        压缩图片-->
        <action id="tiny.editConfigClick" class="com.arnold.tiny.EditConfigAction" text="Tiny Key"
                description="编辑压缩图片key">
            <add-to-group group-id="EditMenu" anchor="first"/>
        </action>

        <action id="tiny.RightSelectedAction"
                class="com.arnold.tiny.RightSelectedAction" text="压缩图片"
                description="压缩图片">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="RefactoringMenu"/>
        </action>


        <action id="channel.rightClick" class="com.arnold.channel.RightClickAction" text="插入渠道"
                description="右键插入渠道">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="RefactoringMenu"/>
        </action>

        <action id="channel.editChannelClick" class="com.arnold.channel.EditChannelAction" text="channel"
                description="渠道信息">
            <add-to-group group-id="EditMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
